<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#090"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TableRow

            android:layout_margin="5dp"
            android:id="@+id/row1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="First Name"
                android:textSize="20sp"
                android:textColor="#900"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:id="@+id/updateFirstName"
                android:textColor="#009"
                android:layout_weight="1"/>

        </TableRow>



        <TableRow

            android:layout_margin="5dp"
            android:id="@+id/row2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Last Name"
                android:textColor="#900"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:id="@+id/updateLastName"
                android:textColor="#009"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow

            android:layout_margin="5dp"
            android:id="@+id/row3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Phone Number"
                android:textColor="#900"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:id="@+id/updatePhoneNumber"
                android:textColor="#009"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow

            android:layout_margin="5dp"
            android:id="@+id/row4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Address"
                android:textColor="#900"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:id="@+id/updateAddress"
                android:textColor="#009"
                android:layout_weight="1"/>

        </TableRow>



    </TableLayout>

    <Button

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/update"
        android:text="UPDATE"/>


</LinearLayout>